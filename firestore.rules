rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /interviews/{interviewId} {
      // Users can only create interview data for themselves.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Users can read their own interview data.
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      // Allow users to list their own interviews. This rule is specifically for the dashboard query.
      allow list: if request.auth != null && request.auth.uid == request.query.where[0][2];
    }
  }
}
